<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/poster_margin_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_poster"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/poster_width"
        android:layout_height="@dimen/poster_height"/>
    
    <TextView
        android:id="@+id/tv_year"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_poster"
        android:layout_marginTop="@dimen/rv_favorite_margin"
        android:layout_marginStart="@dimen/text_year_margin_start"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_year"
        app:layout_constraintStart_toEndOf="@+id/iv_poster"
        app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="@dimen/text_year_margin_start"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/rb_movie"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/iv_poster"
        android:layout_marginStart="@dimen/text_year_margin_start"
        android:stepSize="0.5"
        android:numStars="5"
        android:theme="@style/RatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/btn_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_desc"
        android:layout_marginTop="@dimen/btn_favorite_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>